{
  "compilerOptions": {
    "noEmit": true,
    "pretty": true,
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "pixi.js": ["./node_modules/pixi.js"],
      "@pixi/*": ["./node_modules/@pixi/*"]
    }, 
  },
  "include": [
    "src",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "webpack",
    "scripts"
  ]
}